@model LoginModel
<div class="login-form">
    <form asp-controller="Home" asp-action="Login" method="post">
        <h2 class="text-center">Loja de Brinquedos</h2>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="Senha" placeholder="Password" maxlength="10">
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group">

            @{
                try
                {
                    var erro = TempData["ErrorLogin"].ToString();
                    <span class="text-danger">@erro</span>
                }
                catch
                {

                }
            }

            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
            <a href="#" class="pull-right">Forgot Password?</a>
        </div>
    </form>
    <p class="text-center"><a href="#">Create an Account</a></p>
</div>