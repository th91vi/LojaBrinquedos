<h3>Lista de Vendedores</h3>

<table class="table table-bordered mb-3">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>

        @{

            foreach (var item in (List<VendedorModel>)ViewBag.Vendedores) // casting implicito
            {
                <tr>
                    <td><button type="button" class="btn btn-warning" id="btnEditar" onclick="editar(@item.Id)">Editar</button></td>
                    <td><button type="button" class="btn btn-danger" id="btnExcluir" onclick="excluir(@item.Id)">Excluir</button></td>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                </tr>
            }
        }

    </tbody>
</table>
<button class="btn btn-block btn-primary" type="button" id="btnCadastrar">Cadastrar Vendedor</button>

<script>
    function cadastrar() {
        window.location.href = "../Vendedor/Cadastro";
    }

    function editar(id) {
        window.location.href = "../Vendedor/Cadastro/" + id;
    }

    function excluir(id) {
        window.location.href = "../Vendedor/Excluir/" + id;
    }

    const btnCadastrar = document.getElementById('btnCadastrar');
    btnCadastrar.addEventListener('click', cadastrar);
</script>